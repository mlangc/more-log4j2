<Configuration status="warn">
    <Filters>
        <RoutingFilter>
            <FilterRoute>
                <FilterRouteIf>
                    <MarkerFilter marker="always" onMatch="ACCEPT"/>
                </FilterRouteIf>
                <FilterRouteThen>
                    <AcceptAllFilter/>
                </FilterRouteThen>
            </FilterRoute>

            <FilterRoute>
                <FilterRouteIf>
                    <MarkerFilter marker="never" onMatch="ACCEPT"/>
                </FilterRouteIf>
                <FilterRouteThen>
                    <DenyAllFilter/>
                </FilterRouteThen>
            </FilterRoute>

            <DefaultFilterRoute>
                <NeutralFilter/>
            </DefaultFilterRoute>
        </RoutingFilter>
    </Filters>
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} %-5level - %msg%n"/>
        </Console>
        <CountingAppender name="CountingAppender"/>
    </Appenders>
    <Loggers>
        <Root level="info">
            <AppenderRef ref="Console"/>
        </Root>

        <Logger name="com.github.mlangc.more.log4j2.filters.ConstantFilterTest">
            <AppenderRef ref="CountingAppender"/>
        </Logger>
    </Loggers>
</Configuration>
