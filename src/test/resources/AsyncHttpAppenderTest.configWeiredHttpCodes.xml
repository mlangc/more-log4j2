<Configuration status="WARN">
    <Appenders>
        <AsyncHttp name="AsyncLove500" url="http://localhost:${sys:wireMockPort}/logs/love500"
                   httpSuccessCodes="500" httpRetryCodes="200" lingerMs="1">
            <PatternLayout pattern="%msg"/>
        </AsyncHttp>
        <AsyncHttp name="AsyncHate500" url="http://localhost:${sys:wireMockPort}/logs/hate500"
                   httpSuccessCodes="200" httpRetryCodes="500" retries="1" lingerMs="1">
            <PatternLayout pattern="%msg"/>
        </AsyncHttp>

        <Routing name="Routing">
            <Routes pattern="$${event:Marker}">
                <Route key="love500" ref="AsyncLove500"/>
                <Route ref="AsyncHate500"/>
            </Routes>
        </Routing>
    </Appenders>
    <Loggers>
        <Root level="info">
            <AppenderRef ref="Routing"/>
        </Root>
    </Loggers>
</Configuration>

