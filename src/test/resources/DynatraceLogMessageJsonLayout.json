{
  "timestamp": {
    "$resolver": "timestamp",
    "epoch": {
      "unit": "millis",
      "rounded": true
    }
  },

  "message": {
    "$resolver": "pattern",
    "pattern": "%d{HH:mm:ss.SSS} %-5level %logger{1} - %msg%n"
  },

  "level": {
    "$resolver": "level",
    "field": "name"
  },

  "java": {
    "vm": "${java:vm}",
    "os": "${java:os}",
    "hw": "${java:hw}"
  }
}
