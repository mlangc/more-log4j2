<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Filters>
        <RoutingFilter>
            <FilterRoute>
                <FilterRouteIf>
                    <MarkerFilter marker="throttled" onMatch="ACCEPT"/>
                </FilterRouteIf>
                <FilterRouteThen>
                    <BurstFilter rate="1" maxBurst="1"/>
                </FilterRouteThen>
            </FilterRoute>
            <DefaultFilterRoute>
                <NeutralFilter/>
            </DefaultFilterRoute>
        </RoutingFilter>
    </Filters>
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} %-5level %c{2}:%markerSimpleName - %msg%n"/>
        </Console>
    </Appenders>
    <Loggers>
        <Root level="info">
            <AppenderRef ref="Console"/>
            <BurstFilter rate="5" maxBurst="5"/>
        </Root>
    </Loggers>
</Configuration>
