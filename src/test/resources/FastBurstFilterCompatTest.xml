<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
    <Appenders>
        <CountingAppender name="CountingAppender.Burst"/>
        <CountingAppender name="CountingAppender.FastBurst"/>
    </Appenders>

    <Loggers>
        <Root level="INFO"/>
        <Logger name="com.github.mlangc.more.log4j2.filters.FastBurstFilterCompatTest.Burst">
            <BurstFilter rate="1000" maxBurst="100"/>
            <AppenderRef ref="CountingAppender.Burst"/>
        </Logger>
        <Logger name="com.github.mlangc.more.log4j2.filters.FastBurstFilterCompatTest.FastBurst">
            <FastBurstFilter rate="1000" maxBurst="100"/>
            <AppenderRef ref="CountingAppender.FastBurst"/>
        </Logger>
    </Loggers>
</Configuration>
