<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} %-5level %c{2}:%markerSimpleName - %msg%n"/>
        </Console>
    </Appenders>
    <Loggers>
        <Root level="info">
            <AppenderRef ref="Console"/>
            <BurstFilter rate="5" maxBurst="5"/>
        </Root>

        <Logger name="com.github.mlangc.more.log4j2.filters.MarkerBasedThrottlingBenchmark">
            <Filters>
                <MarkerFilter marker="throttled" onMismatch="ACCEPT"/>
                <BurstFilter rate="1" maxBurst="1"/>
            </Filters>
        </Logger>
    </Loggers>
</Configuration>
