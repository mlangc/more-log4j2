<?xml version="1.0" encoding="UTF-8"?>
<Configuration name="FastBurstCompatTest">
    <Appenders>
        <MarkerBasedCountingAppender name="MarkerBasedCountingAppender.Burst"/>
        <MarkerBasedCountingAppender name="MarkerBasedCountingAppender.FastBurst"/>
    </Appenders>

    <Loggers>
        <Root level="INFO"/>
        <Logger name="com.github.mlangc.more.log4j2.filters.FastBurstFilterCompatTest.Burst">
            <BurstFilter rate="1000" maxBurst="100"/>
            <AppenderRef ref="MarkerBasedCountingAppender.Burst"/>
        </Logger>
        <Logger name="com.github.mlangc.more.log4j2.filters.FastBurstFilterCompatTest.FastBurst">
            <FastBurstFilter rate="1000" maxBurst="100"/>
            <AppenderRef ref="MarkerBasedCountingAppender.FastBurst"/>
        </Logger>
    </Loggers>
</Configuration>
