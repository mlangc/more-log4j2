<Configuration status="WARN">
    <Appenders>
        <AsyncHttp name="Dynatrace" url="${env:DYNATRACE_API_V2_LOGS_INGEST}" contentEncoding="gzip">
            <Property name="Authorization" value="Api-Token ${env:DYNATRACE_API_TOKEN}"/>
            <Property name="Content-Type" value="application/jsonl"/>
            <JsonTemplateLayout eventTemplateUri="classpath:DynatraceLogMessageJsonLayout.json">
                    <EventTemplateAdditionalField key="env" value="perf_test"/>
                    <EventTemplateAdditionalField key="source" value="AsyncHttpAppender.perf_test"/>
                    <EventTemplateAdditionalField key="hostname" value="robotnik-m4"/>
                    <EventTemplateAdditionalField key="service" value="AsyncHttpAppender.perf_test"/>
            </JsonTemplateLayout>
        </AsyncHttp>

        <Console name="Console">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} %-5level %c{2}@[%t] - %msg%n"/>
        </Console>
    </Appenders>
    <Loggers>
        <Root level="info">
            <AppenderRef ref="Dynatrace"/>

            <AppenderRef ref="Console">
                <BurstFilter rate="0.1" maxBurst="3"/>
            </AppenderRef>
        </Root>
    </Loggers>
</Configuration>

